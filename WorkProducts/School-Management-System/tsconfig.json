{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "calenda-scheduler": [
        "dist/calenda-scheduler"
      ],
      "calenda-scheduler/*": [
        "dist/calenda-scheduler/*"
      ],
      "calendar-scheduler": [
        "dist/calendar-scheduler"
      ],
      "calendar-scheduler/*": [
        "dist/calendar-scheduler/*"
      ],
      "event-progress": [
        "dist/event-progress"
      ],
      "event-progress/*": [
        "dist/event-progress/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}